<?xml version="1.0"?>
<launch>
	<!-- simulation -->
	<include file="$(find final_assignment)/launch/simulation.launch"></include>
	<!-- SLAM algo: gmapping -->
	<include file="$(find final_assignment)/launch/gmapping.launch"></include>
	<!-- Navigation algo: move base -->
	<include file="$(find final_assignment)/launch/move_base.launch"></include>

	<!-- node to notify new rooms -->
	<!-- <node name="roomsDetection" pkg="final_assignment" type="roomsDetection.py" /> -->
	<node name="commandManager" pkg="final_assignment" type="commandManager.py" output="screen" /> 
	<!--<node name="cmd_smach" pkg="final_assignment" type="cmd_smach.py" output="screen" /> -->
	<!-- <node name="track" pkg="final_assignment" type="track.py"  /> -->

	<arg name="use_rviz" default="false" />

  <group if="$(arg use_rviz)">
       <node name="rviz" pkg="rviz" type="rviz" args="-d $(find final_assignment)/config/sim.rviz" />
  </group>
	





</launch>
